<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <!--Desktop Layout-->
    
    <DataTemplate x:Key="Desktop_Layout">
        
        <Grid x:Name="baseGrid">

            <Border BorderBrush="#B66E79"
                    BorderThickness="2"
                    Margin="8"
                    CornerRadius="8,8,8,8">
                <Border.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="#D9B4BE" Offset="0.2"/>
                        <GradientStop Color="#B66E79" Offset="0.2"/>
                    </LinearGradientBrush>
                </Border.Background>
            </Border>

            <Grid>
                <Image Source="Assets/logoHome.png"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Top" Margin="0,-51,0,0"
                       Stretch="None" />
            </Grid>

        </Grid>        

    </DataTemplate>
    
</ResourceDictionary>